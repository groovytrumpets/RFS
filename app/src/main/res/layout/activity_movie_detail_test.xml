                tools:layout_editor_absoluteX="65dp"
                tools:layout_editor_absoluteY="94dp" />

            <TextView
                android:id="@+id/detail_director"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#D3D3D3"
                android:textSize="17dp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="39dp"
                tools:layout_editor_absoluteY="122dp"
                tools:text="Scott Derrickson" />

            <TextView
                android:id="@+id/detail_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/white"
                android:textSize="15dp"
                tools:layout_editor_absoluteX="149dp"
                tools:layout_editor_absoluteY="179dp"
                tools:text="114" />

            <Button
                android:id="@+id/detail_trailer_btn"
                android:layout_width="97dp"
                android:layout_height="37dp"
                android:text="Trailer"
                android:textSize="15dp"
                tools:layout_editor_absoluteX="38dp"
                tools:layout_editor_absoluteY="162dp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" mins"
                android:textColor="@color/white"
                android:textSize="15dp"
                tools:layout_editor_absoluteX="180dp"
                tools:layout_editor_absoluteY="180dp" />

            <TextView
                android:id="@+id/detail_description"
                android:layout_width="366dp"
                android:layout_height="138dp"
                android:text="loading..."
                android:textColor="@color/white"
                android:textSize="15dp"
                tools:layout_editor_absoluteX="30dp"
                tools:layout_editor_absoluteY="226dp"
                tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec gravida eros vel accumsan tristique. Vestibulum gravida, purus a auctor iaculis, odio orci dictum felis, et bibendum tortor ex in lorem. " />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ratings:"
                android:textColor="@color/white"
                android:textSize="20dp"
                tools:layout_editor_absoluteX="41dp"
                tools:layout_editor_absoluteY="377dp" />

            <TextView
                android:id="@+id/detail_rating_avg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="..."
                android:textColor="#F3DFA2"
                android:textSize="30dp"
