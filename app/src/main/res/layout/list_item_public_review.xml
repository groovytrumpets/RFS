<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#222324"
android:paddingHorizontal="16dp"
    android:paddingTop="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_movie_title_year"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/tv_review_username"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Tên Phim (2025)" />

    <ImageView
        android:id="@+id/iv_user_avatar"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@mipmap/ic_user_defaut"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tv_review_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="8dp"
        android:textColor="#CCCCCC"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/iv_user_avatar"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="username" />

    <RatingBar
        android:id="@+id/rb_review_score"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:isIndicator="true"
        android:numStars="5"
        android:stepSize="0.5"
        android:progressTint="@color/star_filled_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_movie_title_year" />

    <ImageView
        android:id="@+id/iv_movie_poster"
        android:layout_width="80dp"
        android:layout_height="120dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rb_review_score"
        tools:src="@tools:sample/backgrounds/scenic" />

    <TextView
        android:id="@+id/tv_review_comment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="12dp"
        android:ellipsize="end"
        android:maxLines="6"
        android:textColor="#DDDDDD"
        app:layout_constraintBottom_toBottomOf="@id/iv_movie_poster"
        app:layout_constraintEnd_toStartOf="@+id/ll_edit_delete"
        app:layout_constraintStart_toEndOf="@id/iv_movie_poster"
        app:layout_constraintTop_toTopOf="@id/iv_movie_poster"
        tools:text="Nội dung review khá dài dòng ở đây..." />

    <LinearLayout
        android:id="@+id/ll_edit_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_review_comment"
        app:layout_constraintBottom_toBottomOf="@id/tv_review_comment">

        <ImageButton
            android:id="@+id/btn_edit_public_review"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/outline_border_color_24"
            android:visibility="gone"
            app:tint="#F1DDA1"
            tools:visibility="visible" />

        <ImageButton
            android:id="@+id/btn_delete_public_review"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/outline_delete_24"
            android:visibility="gone"
            app:tint="#BA4330"
            tools:visibility="visible" />
        <ImageButton
            android:id="@+id/btn_report_public_review"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/baseline_report_24"
            android:visibility="visible"
            app:tint="#A4A4A4"
            tools:visibility="visible" />

    </LinearLayout>

    <View
        android:id="@+id/divider_after_reviews"
        android:layout_width="411dp"
        android:layout_height="1dp"
        android:layout_marginTop="6dp"
        android:background="#33FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_movie_poster" />

</androidx.constraintlayout.widget.ConstraintLayout>