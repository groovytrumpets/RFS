<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_public_list_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:text="Tên Danh Sách"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#CCCCCC" />
        <TextView
            android:id="@+id/tv_creator_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="by Khanh Test"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginRight="10dp"
            android:textColor="#CCCCCC"/>
        <ImageView
            android:id="@+id/iv_user_avatar"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@mipmap/ic_user_defaut"
            tools:layout_editor_absoluteX="363dp"
            tools:layout_editor_absoluteY="16dp"
            tools:src="@tools:sample/avatars" />
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_movies_preview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal" />
    <TextView
        android:id="@+id/tv_public_list_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        tools:text="Mô tả ngắn gọn của danh sách phim..."
        android:textSize="14sp"
        android:textColor="#AAAAAA"
        android:maxLines="5"
        android:ellipsize="end"/>
    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:background="#33FFFFFF" />

</LinearLayout>