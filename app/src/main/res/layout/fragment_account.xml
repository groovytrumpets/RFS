<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#252627"
    tools:context=".AccountFragment">
    <View
        android:id="@+id/statusBarSpacer"
        android:layout_width="0dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@android:color/transparent"
        android:fitsSystemWindows="true"/>

    <!-- Header chứa tên hệ thống -->

    <LinearLayout
        android:id="@+id/header_container"
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="8dp"
        android:paddingBottom="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/statusBarSpacer">

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/valorant"
            android:letterSpacing="0.03"
            android:text="Rf system"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Avatar + Username -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="70dp">

                <ImageView
                    android:id="@+id/avatar"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginEnd="16dp"
                    android:scaleType="centerCrop"
                    android:background="@drawable/avatar_background"
                    tools:src="@tools:sample/avatars" />

                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign in"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Sign in / Auth button -->
            <Button
                android:id="@+id/authenBtn"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="20dp"
                android:text="Sign in or create an account"
                android:textSize="15sp"
                android:textColor="@color/black"
                app:backgroundTint="#F3DFA2" />

            <!-- My Profile -->
            <Button
                android:layout_marginTop="20dp"
                android:id="@+id/myProfilebtn"
                style="@style/AccountItemButton"
                android:text="Profile" />

            <View style="@style/DividerLine" />

            <!-- My Reviews -->
            <Button
                android:id="@+id/myReviewsbtn"
                style="@style/AccountItemButton"
                android:text="Reviews" />

            <View style="@style/DividerLine" />

            <!-- My Lists -->
            <Button
                android:id="@+id/myListbtn"
                style="@style/AccountItemButton"
                android:text="Lists" />

            <View style="@style/DividerLine" />

            <!-- Following -->
            <Button
                android:id="@+id/myFollowingbtn"
                style="@style/AccountItemButton"
                android:text="Following" />

            <View style="@style/DividerLine" />

            <!-- Followers -->
            <Button
                android:id="@+id/myFollowerbtn"
                style="@style/AccountItemButton"
                android:text="Followers" />

            <View style="@style/DividerLine" />

            <!-- Logout -->
            <Button
                android:id="@+id/logoutBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Logout"
                android:textColor="#FFFFFF"
                android:visibility="gone"
                app:backgroundTint="#BB4430" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
