<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#252627"
    tools:context=".AccountFragment">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="572dp"
        android:layout_height="379dp"
        android:contentDescription="TODO"
        android:src="@drawable/devon_janse_van_rensburg_nxakhtq1j6c_unsplash"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="150dp"
        android:layout_height="149dp"
        android:src="@drawable/logo_new_sample_2"
        app:layout_constraintBottom_toTopOf="@+id/signIn_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.792" />

    <Button
        android:id="@+id/createAcc_btn"
        android:layout_width="325dp"
        android:layout_height="45dp"
        android:gravity="center"
        android:text="Create account"
        app:backgroundTint="#F3DFA2"
        app:layout_constraintBottom_toTopOf="@+id/tour_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signIn_btn"
        app:layout_constraintVertical_bias="0.2" />

    <Button
        android:id="@+id/signIn_btn"
        android:layout_width="326dp"
        android:layout_height="44dp"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:text="Sign in"
        app:backgroundTint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <Button
        android:id="@+id/tour_btn"
        android:layout_width="325dp"
        android:layout_height="47dp"
        android:layout_marginTop="52dp"
        android:gravity="center"
        android:text="Open the tour"
        android:textColor="#FFFFFF"
        app:backgroundTint="#252627"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signIn_btn"
        app:layout_constraintVertical_bias="0.323" />

</androidx.constraintlayout.widget.ConstraintLayout>